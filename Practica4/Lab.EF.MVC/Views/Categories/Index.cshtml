@model List<Lab.EF.MVC.Models.CategoriesView>


@{ 
    ViewBag.Title = "Categories Page";
}

<h1>Categorías</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Eliminar</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Nombre</td>
                <td>@category.Descripcion</td>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = @category.Id}, new { onclick = "return confirm('¿Desea eliminar la categoría?')" })</td>
                <td>@Html.ActionLink("Editar", "Edit", new { id = @category.Id }, null)</td>
            </tr>
        }
    </tbody>
 </table>     

<div>
    @Html.ActionLink("Insertar nueva Categoría", "Insert")
</div>